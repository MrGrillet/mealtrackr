<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>Liquid categories</h1>
      </div>
      <div class="col-md-6">
        <%= link_to 'Add new category', new_liquid_category_path, class: "btn btn--primary text-white float-right" %>
      </div>
    </div>
  </div>
</section>

<section class="bg--secondary">
  <div class="container">
    <div class="row">
      <% @categories.each do |category| %>
        <div class="col-md-4">
          <a href="<%= liquid_category_path(category) %>">
            <div class="feature feature-1 boxed boxed--border">
              <h5><%= category.name %></h5>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</section>
