<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Food categories</h1>
        <%= link_to 'Add new category', new_food_category_path, class: "btn btn-primary text-white" %>
        <hr>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="heading-block">
          
        </div>
      </div>

      <% @categories.each do |category| %>
        <div class="col-md-4">
          <a href="<%= food_category_path(category) %>">
            <div class="feature feature-1 boxed boxed--border">
              <!-- <span class="label">Keyword</span> -->
              <h5><%= category.name %></h5>

            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</section>
