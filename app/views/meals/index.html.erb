<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>Meals</h1>
      </div>
      <div class="col-md-6">
        <%= link_to 'Add meal', new_meal_path, class: "btn btn--primary type--uppercase text-white float-right" %>
      </div>
    </div>
  </div>
</section>

<section class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8">
        <%= area_chart [
          {name: "Mood", data: User.group_by_day(:created_at).count},
          {name: "Sleep", data: User.group_by_day(:created_at).count},
          {name: "Pain", data: User.group_by_day(:created_at).count},
          {name: "Alcoholic Drinks", data: User.group_by_day(:created_at).count},
          {name: "Soft Drinks", data: User.group_by_day(:created_at).count},
          {name: "New Profiles", data: Meal.group_by_day(:created_at).count}
          ] %>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <% @meals.each do |meal| %>
        <div class="col-md-4">
          <a href="<%= meal_path(meal) %>">
            <div class="feature feature-1 boxed boxed--border">
              <!-- <span class="label">Keyword</span> -->
              <h5><%= meal.title %></h5>
              <p><%= meal.notes %></p>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</section>
