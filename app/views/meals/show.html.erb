<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= @meal.title %></h1><%= link_to 'Edit', edit_meal_path(@meal) %>
        <hr>
      </div>
    </div>
    <div class="row justify-content-between">
      <div class="col-md-4 col-lg-3">
        <div class="text-block">
          <ul>
            <% @meal.foods.each do |food| %>
              <li><a href="#">
                <span class="badge badge-primary"><%= food.title %></span></a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col">
        <div class="text-block">
          <h3>Notes</h3>
          <h5><%= @meal.meal_type %></h5>
          <p><%= @meal.notes %></p>
        </div>
      </div>
    </div>
    <hr>
  </div>
</section>
<section class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @meal.mood_rating * 10 %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Mood</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="66" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Focus</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="66" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Pain</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @meal.sleep_rating * 10 %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Sleep</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @meal.drink_count * 10 %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label"><%= @meal.drink_count %> Drinks</span>
          </div>
        </div>
      </div>
    </div>
    <hr>
  </div>
</section>
<section>
  <div class="container">
    <div class="row justify-content-between">
      <div class="offset-md-3 col">
        <div class="text-block">
          <h3>Psychological Symptoms</h3>
          <p><%= @meal.psychological_symptoms %></p>

          <h3>Physical Symptoms</h3>
          <p><%= @meal.physical_symptoms %></p>
        </div>
      </div>
    </div>
  </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="slider" data-paging="true" data-arrows="true">
                    <ul class="slides">
                        <li>
                            <img alt="Image" src="img/work-single-1.jpg" />
                        </li>
                        <li>
                            <img alt="Image" src="img/work-single-3.jpg" />
                        </li>
                        <li>
                            <img alt="Image" src="img/work-single-4.jpg" />
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
