<%= form_with(model: @feeling, local: true) do |form| %>
  <% if @feeling.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feeling.errors.count, "error") %> prohibited this feeling from being saved:</h2>

      <ul>
      <% @feeling.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="offset-md-4 col">
      <p>One of these forms should be filled in per day</p>
    </div>
  </div>

  <div class="form-group row">
    <h3 class="col-sm-4 col-form-label">Title</h3>
    <div class="col">
      <%= form.text_field :title, id: :feeling_title, class: "form-control",
    placeholder: "", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <p class="col-sm-4 col-form-label">Notes</p>
    <div class="col">
      <%= form.text_area :notes, id: :notes, rows: 5, class: "form-control",
      placeholder: "",
      autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <p class="col-sm-4 col-form-label">Mood Rating</p>
  	<div class="col">
  		<%= form.select :mood_rating, options_for_select(1..10, 5) %>
  	</div>
  </div>

  <div class="form-group row">
    <p class="col-sm-4 col-form-label">Sleep Rating</p>
  	<div class="col">
  		<%= form.select :sleep_rating, options_for_select(1..10, 5) %>
  	</div>
  </div>

  <div class="form-group row">
    <p class="col-sm-4 col-form-label">Pain Rating</p>
    <div class="col">
      <%= form.select :pain_rating, options_for_select(0..10) %>
    </div>
  </div>

  <div class="form-group row">
    <p class="col-sm-4 col-form-label">Psychological Symptoms</p>
    <div class="col">
      <%= form.text_area :psychological_symptoms, id: :psychological_symptoms, rows: 5, class: "form-control",
      placeholder: "",
      autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <p class="col-sm-4 col-form-label">Physical Symptoms</p>
    <div class="col">
      <%= form.text_area :physical_symptoms, id: :physical_symptoms, rows: 5, class: "form-control",
      placeholder: "",
      autofocus: true %>
    </div>
  </div>

  <div class="actions mt-5">
    <%= form.submit 'Submit â†’', class: "btn btn-outline-dark float-right" %>
    <%= link_to 'Dashboard', dashboard_path %>
    <% if @feeling.title %>
     | <%= link_to 'New', new_feeling_path %> |
      <%= link_to 'View', @feeling %> |
      <%# link_to 'Delete', feeling_path(@feeling), class: "danger" , method: :delete, data: {confirm: "Are you sure you want to delete the meal?"} %>
    <% end %>
  </div>
<% end %>
