<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= @feeling.title %></h1><%= link_to 'Edit', edit_feeling_path(@feeling) %>
        <%= @feeling.date %>
        <hr>
      </div>
    </div>
  </div>
</section>

<section class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @feeling.mood_rating * 10 if @feeling.mood_rating %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Mood</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @feeling.focus_rating * 10 if @feeling.focus_rating %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Focus</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @feeling.pain_rating * 10 if @feeling.pain_rating %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Pain</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @feeling.sleep_rating * 10 if @feeling.sleep_rating %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Sleep</span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-12">
        <div class="feature">
          <div class="radial" data-value="<%= @feeling.skin_irritation * 10 if @feeling.skin_irritation %>" data-size="208" data-bar-width="8" data-color="#4a90e2">
            <span class="h3 radial__label">Skin Irritation</span>
          </div>
        </div>
      </div>
    </div>
    <hr>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="offset-md-4 col">
        <div class="text-block">
          <h3>Notes</h3>
          <p><%= @feeling.notes %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="offset-md-4 col">
        <div class="text-block">
          <h3>Physical Symptoms</h3>
          <p><%= @feeling.physical_symptoms %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="offset-md-4 col">
        <div class="text-block">
          <h3>Psychological Symptoms</h3>
          <p><%= @feeling.psychological_symptoms %></p>
        </div>
      </div>
    </div>
  </div>
</section>
