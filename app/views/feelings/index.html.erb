<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>Feelings</h1>
      </div>
      <div class="col-md-6">
        <%= link_to 'Add Feeling', new_feeling_path, class: "btn btn--primary text-white float-right" %>
      </div>
    </div>
  </div>
</section>
    <section class="bg--secondary">
      <div class="container">
    <div class="row">
      <% @feelings.each do |feeling| %>
        <div class="col-md-4">
          <div class="feature feature-1 boxed boxed--border">
            <div class="radial" data-value="<%= feeling.mood_rating * 10 %>" data-timing="1000" data-color="#4a90e2" data-size="100" data-bar-width="10">
              <span class="h3 radial__label"><%= feeling.mood_rating %></span>
             </div>
             <small><%= feeling.created_at.strftime("%m/%d/%Y") %></small>
             <h3><%= feeling.title %></h3>

            <a href="<%= feeling_path(feeling) %>" class="btn btn-block">View &rarr;</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
