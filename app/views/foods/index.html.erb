<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Foods</h1>
        <%= link_to 'Add new food', new_food_path, class: "btn btn--primary text-white" %>
      </div>
    </div>
  </div>
</section>
<section class="bg--secondary">
  <div class="container">
    <div class="row">
      <% @foods.each do |food| %>
        <div class="col-md-4">
          <a href="<%= food_path(food) %>">
            <div class="feature feature-1 boxed boxed--border">
              <!-- <span class="label">Keyword</span> -->
              <h5><%= food.title %></h5>
              <p><%= food.description %></p>
              <p><%# food.food_category %></p>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</section>
